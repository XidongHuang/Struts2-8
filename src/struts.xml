<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>


	<!-- Configure global file -->
	<constant name="struts.custom.i18n.resources" value="i18n"></constant>

	<package name="default" namespace="/" extends="struts-default">

		
		<action name="testValidation" class="com.tony.struts2.validation.app.TestValidationAction">
			<result>/success.jsp</result>
			<!-- If validation is fail -->
			<result name="input">/validation.jsp</result>
			
			
		</action>
		<action name="testValidation2" class="com.tony.struts2.validation.app.TestValidationAction">
			<result>/success.jsp</result>
			<!-- If validation is fail -->
			<result name="input">/validation2.jsp</result>
			
			
		</action>


	</package>





</struts>
